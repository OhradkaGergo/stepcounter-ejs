<%- include('../system/header') %>

<div class="container mb-3 mt-3">
    <h3>Stepcounter</h3>
    <h5>Lépések</h5>
    <a href="/steps/new" class="btn btn-dark mb-3">Új lépés felvétele</a>

    <% if (steps.length === 0) { %>
        <div>Jelenleg nincsenek rögzített lépések.</div>
    <% } else { %>
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th><i class="bi bi-list-ol"></i></th>
                    <th><i class="bi bi-calendar"></i>&nbsp;Dátum</th>
                    <th><i class="bi bi-person-walking"></i>&nbsp;Lépések</th>
                    <th class="text-end"><i class="bi bi-gear"></i>&nbsp;Műveletek</th>
                </tr>
            </thead>
            <tbody>
                <% steps.forEach((item, index) => { %>
                    <tr>
                        <td><%= index + 1 %>.</td>
                        <td><%= item.date %></td>
                        <td><%= item.steps %></td>
                        <td class="text-end">
                            <a href="/steps/edit/<%= item.id %>" class="btn btn-warning btn-sm me-1"><i class="bi bi-pencil-square"></i>&nbsp;Szerkesztés</a>
                            <a href="/steps/delete/<%= item.id %>" class="btn btn-danger btn-sm"><i class="bi bi-trash3"></i>&nbsp;Törlés</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4">
                        Összesen <strong><%= steps.length %></strong> nap
                    </td>
                </tr>
            </tfoot>
        </table>
    <% } %>
</div>

<%- include('../system/footer') %>